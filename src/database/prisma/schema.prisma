generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/offer_monitor"
}

model Item{
  id          Int     @id @default(autoincrement())
  link        String
  description String
  ref_price   Float
  last_checked_price Float?
  status      Int
}



